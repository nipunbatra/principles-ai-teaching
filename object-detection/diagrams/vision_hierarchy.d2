      [("Dog", x1,y1,x2,y2)]
    |
    shape: rectangle
    style.fill: "#fff"
  }
  input -> output: "What + Where?"
}

segmentation: {
  label: Segmentation
  shape: rectangle
  style.fill: "#FFF3E0"
  style.stroke: "#E65100"
  style.stroke-width: 2

  input: {
    label: "Input: Image"
    shape: rectangle
    style.fill: "#fff"
  }
  output: {
    label: |md
      Output: **Pixel Masks**
