}

classification: {
  label: Classification
  shape: rectangle
  style.fill: "#E3F2FD"
  style.stroke: "#2E86AB"
  style.stroke-width: 2

  input: {
    label: "Input: Image"
    shape: rectangle
    style.fill: "#fff"
  }
