# D2 Theme - Matches iitgn-modern.css
# Import this file in D2 diagrams for consistent styling

vars: {
  # Primary colors (from CSS)
  primary: "#1e3a5f"
  primary-light: "#2e5a8f"
  accent: "#e85a4f"
  accent-soft: "#ff8c7f"
  success: "#2a9d8f"
  warning: "#e9c46a"

  # Semantic colors
  text: "#2d3748"
  text-light: "#4a5568"
  bg-light: "#f7fafc"
  bg-card: "#ffffff"

  # Node fill colors (lighter variants for backgrounds)
  fill-primary: "#E3F2FD"
  fill-primary-mid: "#BBDEFB"
  fill-success: "#E8F5E9"
  fill-success-mid: "#C8E6C9"
  fill-warning: "#FFF8E1"
  fill-warning-mid: "#FFECB3"
  fill-accent: "#FFEBEE"
  fill-accent-mid: "#FFCDD2"
  fill-neutral: "#ECEFF1"

  # Stroke colors
  stroke-primary: "#1e3a5f"
  stroke-success: "#2a9d8f"
  stroke-warning: "#FF9800"
  stroke-accent: "#e85a4f"
  stroke-neutral: "#607D8B"

  # Typography
  font-size-title: 24
  font-size-large: 18
  font-size-normal: 16
  font-size-small: 14

  # Stroke width
  stroke-width: 2
}

# Common node classes (can be referenced with @class)
classes: {
  input: {
    style.fill: ${vars.fill-primary}
    style.stroke: ${vars.stroke-primary}
    style.stroke-width: ${vars.stroke-width}
    style.font-size: ${vars.font-size-normal}
    style.font-color: ${vars.text}
  }

  process: {
    style.fill: ${vars.fill-warning}
    style.stroke: ${vars.stroke-warning}
    style.stroke-width: ${vars.stroke-width}
    style.font-size: ${vars.font-size-normal}
    style.font-color: ${vars.text}
  }

  output: {
    style.fill: ${vars.fill-success}
    style.stroke: ${vars.stroke-success}
    style.stroke-width: ${vars.stroke-width}
    style.font-size: ${vars.font-size-normal}
    style.font-color: ${vars.text}
  }

  result: {
    style.fill: ${vars.fill-accent}
    style.stroke: ${vars.stroke-accent}
    style.stroke-width: ${vars.stroke-width}
    style.font-size: ${vars.font-size-normal}
    style.font-color: ${vars.text}
  }

  note: {
    style.fill: ${vars.fill-neutral}
    style.stroke: ${vars.stroke-neutral}
    style.font-size: ${vars.font-size-small}
    style.font-color: ${vars.text-light}
  }

  title: {
    shape: text
    style.font-size: ${vars.font-size-title}
    style.bold: true
    style.font-color: ${vars.primary}
  }
}
