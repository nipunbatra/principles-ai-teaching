# Neural Network for Regression

direction: right

vars: {
  primary: "#1e3a5f"
  success: "#2a9d8f"
  warning: "#FF9800"
  accent: "#e85a4f"
  fill-primary: "#E3F2FD"
  fill-success: "#E8F5E9"
  fill-warning: "#FFF8E1"
  fill-accent: "#FFEBEE"
}

input: {
  label: |md
    **INPUT**

    House Features
    $\mathbf{x} = [\text{sqft}, \text{beds}, \text{age}]$
  |
  shape: rectangle
  style.fill: ${fill-primary}
  style.stroke: ${primary}
  style.stroke-width: 2
  style.font-size: 14
}

hidden: {
  label: |md
    **HIDDEN LAYERS**

    Learn non-linear
    mapping $f(\mathbf{x})$
  |
  shape: rectangle
  style.fill: ${fill-warning}
  style.stroke: ${warning}
  style.stroke-width: 2
  style.font-size: 14
}

output: {
  label: |md
    **OUTPUT**

    1 neuron (Linear)
    $\hat{y} = \mathbf{w}^T\mathbf{h} + b$
  |
  shape: rectangle
  style.fill: ${fill-success}
  style.stroke: ${success}
  style.stroke-width: 2
  style.font-size: 14
}

result: {
  label: |md
    **PREDICTION**

    $\hat{y} = \$450K$
    Any real number
    $\hat{y} \in \mathbb{R}$
  |
  shape: rectangle
  style.fill: ${fill-accent}
  style.stroke: ${accent}
  style.stroke-width: 2
  style.font-size: 14
}

input -> hidden: Features {
  style.stroke: ${primary}
  style.font-size: 12
}
hidden -> output: Activations {
  style.stroke: ${warning}
  style.font-size: 12
}
output -> result: Continuous {
  style.stroke: ${success}
  style.font-size: 12
}
