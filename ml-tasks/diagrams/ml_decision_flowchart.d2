# ML Task Decision Flowchart - Compact Layout

direction: right

start: {
  label: "What output?"
  shape: oval
  style.fill: "#E3F2FD"
  style.stroke: "#1e3a5f"
  style.stroke-width: 2
  style.font-size: 14
}

decisions: {
  style.fill: "#FFF8E1"
  style.stroke: "#FF9800"

  cat: {
    label: Category?
    shape: diamond
    style.fill: "#FFF8E1"
  }
  num: {
    label: Number?
    shape: diamond
    style.fill: "#FFF8E1"
  }
  loc: {
    label: Location?
    shape: diamond
    style.fill: "#FFF8E1"
  }
  seq: {
    label: Sequence?
    shape: diamond
    style.fill: "#FFF8E1"
  }
}

tasks: {
  style.fill: "#E8F5E9"
  style.stroke: "#4CAF50"

  cls: {
    label: Classification
    shape: rectangle
    style.fill: "#C8E6C9"
    style.stroke: "#4CAF50"
    style.stroke-width: 2
  }
  reg: {
    label: Regression
    shape: rectangle
    style.fill: "#C8E6C9"
    style.stroke: "#4CAF50"
    style.stroke-width: 2
  }
  det: {
    label: Detection
    shape: rectangle
    style.fill: "#C8E6C9"
    style.stroke: "#4CAF50"
    style.stroke-width: 2
  }
  seg: {
    label: Segmentation
    shape: rectangle
    style.fill: "#C8E6C9"
    style.stroke: "#4CAF50"
    style.stroke-width: 2
  }
  s2s: {
    label: Seq2Seq
    shape: rectangle
    style.fill: "#C8E6C9"
    style.stroke: "#4CAF50"
    style.stroke-width: 2
  }
}

start -> decisions.cat
decisions.cat -> tasks.cls: Yes
decisions.cat -> decisions.num: No
decisions.num -> tasks.reg: Yes
decisions.num -> decisions.loc: No
decisions.loc -> tasks.det: Box
decisions.loc -> tasks.seg: Pixels
decisions.loc -> decisions.seq: No
decisions.seq -> tasks.s2s: Yes
